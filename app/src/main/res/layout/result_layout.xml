<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <!--Remember every xml is lower case + seperated by _-->
    <!--5 Create this, Add 2 textViews for data in this example -->


    <TextView
        android:id="@+id/recipeTitle"
        android:layout_width="240dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="asd"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/recipeLikes"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recipeTitle"
        android:layout_marginStart="150dp"
        android:text="Likes"></TextView>

    <ImageView
        android:id="@+id/likes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/recipeLikes"
        android:layout_toEndOf="@+id/recipeLikes"
        android:src="@drawable/ic_thumb_up_black_24dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/recipeListImage"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher" />
</RelativeLayout>